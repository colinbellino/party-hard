<label>
  Name

  {{input type="text" value=drop.name}}

  {{#if (v-get drop 'name' 'isDirty')}}
    {{v-get drop 'name' 'message'}}
  {{/if}}
</label>

<div class="row">
  <div class="columns small-8">

    <label>
      Price

      {{input type="number" value=drop.price}}

      {{#if (v-get drop 'price' 'isDirty')}}
        {{v-get drop 'price' 'message'}}
      {{/if}}
    </label>

  </div>
  <div class="columns small-4">

    <label>
      Quantity

      {{input type="number" value=drop.quantity}}

      {{#if (v-get drop 'quantity' 'isDirty')}}
        {{v-get drop 'quantity' 'message'}}
      {{/if}}
    </label>

  </div>
</div>

<label>
  Members

  <select {{action 'changeCharacter' on='change'}}>
    <option value="0" selected={{is-equal character selectedCharacter}}></option>
    {{#each availableCharacters key="@index" as |character|}}
      <option value="{{character.id}}" selected={{is-equal character selectedCharacter}}>
        {{character.name}}
      </option>
    {{/each}}
  </select>
</label>

{{#if drop.creditors}}
  <div>
    <span class="label">Creditors</span>
    {{#each drop.creditors as |character|}}
      {{character.name}}
    {{/each}}
  </div>
{{/if}}

<hr>

<button class="button" {{action 'save'}}>Save</button>

{{yield}}
